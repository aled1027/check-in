---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Submitted">
  <main>
    <section>
      <h1>Check-in</h1>
      <p>Check-in successfully submitted!</p>
      <a href="/">Submit again</a>
    </section>
  </main>
</Layout>

<style>
  main {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80dvh;
  }
  section {
    max-width: 310px;
    min-width: 280px;
    min-height: 310px;
    margin: auto;
    background-image: var(--gradient-9), var(--noise-3);
    border-radius: var(--radius-3);

    padding: 1rem;
    text-align: center;
  }
</style>
